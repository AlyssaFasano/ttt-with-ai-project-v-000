#!/usr/bin/env ruby

require_relative '../config/environment'
def play_the_game

  puts "Welcome to Tic Tac Toe!"
  puts "What kind of game would you like to play?"
  puts "Please select 1, 2 or 3 player."
  input = gets.chomp.to_i

  case input
  when 1
    game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O"))
    game.board.display
    game.play
  when 2
    puts "The first player will play with the character X"
    puts "If you would like to make the first move, please choose 1."
    puts "If you would liek to make the second move, please choose 2."
    user = gets.chomp.to_i
    if user == 1
      game = Game.new(player_1 = Players::Human.new("X"), player_2 = Players::Computer.new("O"))
      game.board.display
      game.play
    elsif user == 2
      game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Human.new("O"))
      game.board.display
      game.play
    end
  when 3
    puts "The first player will play with the character X"
    puts "If you would like to make the first move, please choose 1."
    puts "If you would liek to make the second move, please choose 2."
    player = gets.chomp.to_i
    game = Game.new
    game.board.display
    game.play
  else
    puts "Selection is invalid. Please try again."
  end
end

play_the_game
puts "Please type 1 to play another game."
input = gets.chomp.to_i
if input == 1
  play_the_game
end
